//Declarative with shared library
@Library('pipeline-academy-library')
import org.dylan.testFuncs;

pipeline {
    agent any
    environment {
        TEST = 'default'
    }
    stages {
        stage('Shared Library Test') {
            steps {
                setEnv this, 'new String'
            }
        }
    }
}


